{
  "mcpServers": {
    "memory": {
      "command": "/Users/alexgarden/projects/agora/.venv/bin/python",
      "args": [
        "-m",
        "agora.memory.mcp"
      ],
      "cwd": "/Users/alexgarden/projects/agora",
      "env": {
        "ARGONAUT_DB_PATH": "/Users/alexgarden/projects/agora/.argonaut/argonaut.db",
        "DAIMONION_DB_PATH": "/Users/alexgarden/projects/agora/.daimonion/daimonion.db",
        "AGORA_DB_PATH": "/Users/alexgarden/.agora/agora.db",
        "AGORA_SHARED_DIR": "/Users/alexgarden/projects/agora/shared",
        "SIBLINGS_DIR": "/Users/alexgarden/projects/agora/siblings",
        "SIBLING_ID": "ember"
      }
    },
    "agora": {
      "command": "/Users/alexgarden/projects/agora/.venv/bin/python",
      "args": [
        "-m",
        "agora.mcp.server"
      ],
      "cwd": "/Users/alexgarden/projects/agora",
      "env": {
        "AGORA_DB_PATH": "/Users/alexgarden/.agora/agora.db",
        "AGORA_SHARED_DIR": "/Users/alexgarden/projects/agora/shared",
        "SIBLING_ID": "ember"
      }
    }
  },
  "hooks": {
    "SessionStart": [
      {
        "matcher": [
          "startup",
          "clear"
        ],
        "hooks": [
          {
            "type": "command",
            "command": "clargonaut prime --hook"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": [
          "normal"
        ],
        "hooks": [
          {
            "type": "command",
            "command": "clargonaut handoff --auto"
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "clargonaut handoff --auto"
          }
        ]
      }
    ]
  }
}
