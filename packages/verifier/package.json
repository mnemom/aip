{
  "name": "@mnemom/aip-verifier",
  "version": "0.2.0",
  "description": "Offline verification of AIP integrity certificates â€” Ed25519 signatures, chain hashes, and Merkle proofs",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "ai",
    "agent",
    "integrity",
    "verification",
    "certificate",
    "ed25519",
    "merkle",
    "offline"
  ],
  "author": "Mnemom.ai",
  "license": "Apache-2.0",
  "homepage": "https://github.com/mnemom/aip#readme",
  "bugs": {
    "url": "https://github.com/mnemom/aip/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mnemom/aip.git",
    "directory": "packages/verifier"
  },
  "dependencies": {
    "@noble/ed25519": "^2.2.0",
    "@noble/hashes": "^1.7.0"
  },
  "devDependencies": {
    "@types/node": "^25.2.2",
    "tsup": "^8.0.0",
    "typescript": "^5.4.0",
    "vitest": "^1.6.0"
  }
}
